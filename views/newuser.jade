extends layout
block content

    div(data-role='content', style='background: #000000 url(\'images/img-bg3.jpg\'); -webkit-background-size: 100% auto;')
        a.logoutLink(href='/logout') Logout
        h2= title
        form#formAddUser(method='post', action='/adduser')
            fieldset(data-role='controlgroup')
                label(for='fname') First Name
                input#fname(type='text', placeholder='Enter First Name', name='fname')
                label(for='lname') Last Name
                input#lname(type='text', placeholder='Enter Last Name', name='lname')
                label(for='email') Email
                input#email(type='text', placeholder='Enter Email', name='email')
                label(for='phone') Phone Number
                input#phone(type='text', placeholder='Enter Phone Number', name='phone')
                label(for='username') Username
                input#username(type='text', placeholder='Enter Username', name='username')
                label(for='password') Password
                input#password(type='password', placeholder='Enter Password', name='password')
                label(for='conf_password') Confirm Password
                input#conf_password(type='password', placeholder='Confirm Password', name='conf_password')
                br
                label(for='terms') Terms & Conditions
                input#terms(type='checkbox', name='terms')
            br
            fieldset(data-role='controlgroup', data-type='horizontal')
                button#btnSubmit(data-theme='b', type='submit') Submit
                button#btnReset(data-theme='b', type='reset') Reset
        br
        a(data-role='button', data-mini='true', data-rel='back', data-theme='a', data-icon='back', data-shadow='false', data-iconpos='right') Back